{
    "api_path": {
        "description": "API接口路径",
        "type": "string",
        "default": "/api/render/image"
    },
    "auth_token": {
        "description": "认证令牌",
        "type": "string",
        "default": ""
    },
    "server_host": {
        "description": "服务监听地址",
        "type": "string",
        "default": "0.0.0.0"
    },
    "server_port": {
        "description": "服务端口",
        "type": "int",
        "default": 8080
    },
    "template_notification_enabled": {
        "description": "启用通知模板",
        "type": "bool",
        "default": true
    },
    "template_notification_html": {
        "description": "通知模板HTML内容",
        "type": "text",
        "default": "<!DOCTYPE html>\\n<html>\\n<head>\\n    <meta charset=\\\"utf-8\\\">\\n    <style>\\n        body {\\n            font-family: 'Microsoft YaHei', sans-serif;\\n            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);\\n            margin: 0;\\n            padding: 20px;\\n            min-height: 100vh;\\n            display: flex;\\n            align-items: center;\\n            justify-content: center;\\n        }\\n        .card {\\n            background: white;\\n            border-radius: 15px;\\n            padding: 30px;\\n            box-shadow: 0 10px 30px rgba(0,0,0,0.2);\\n            max-width: 600px;\\n            width: 100%;\\n        }\\n        .title {\\n            font-size: 24px;\\n            font-weight: bold;\\n            color: #333;\\n            margin-bottom: 20px;\\n            text-align: center;\\n        }\\n        .content {\\n            font-size: 16px;\\n            color: #666;\\n            line-height: 1.6;\\n            margin-bottom: 20px;\\n        }\\n        .footer {\\n            font-size: 12px;\\n            color: #999;\\n            text-align: center;\\n            border-top: 1px solid #eee;\\n            padding-top: 15px;\\n        }\\n    </style>\\n</head>\\n<body>\\n    <div class=\\\"card\\\">\\n        <div class=\\\"title\\\">{{title | default('通知')}}</div>\\n        <div class=\\\"content\\\">{{content | default('这是一条通知消息')}}</div>\\n        <div class=\\\"footer\\\">{{timestamp | default('刚刚')}}</div>\\n    </div>\\n</body>\\n</html>"
    },
    "template_notification_width": {
        "description": "通知模板渲染宽度",
        "type": "int",
        "default": 800
    },
    "template_notification_quality": {
        "description": "通知模板图片质量",
        "type": "string",
        "default": "high"
    },
    "custom_templates": {
        "description": "自定义模板配置",
        "type": "text",
        "default": "{}"
    }
}