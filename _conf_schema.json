{
    "api_path": {
        "description": "API接口路径",
        "type": "string",
        "default": "/api/render/image"
    },
    "auth_token": {
        "description": "认证令牌",
        "type": "string",
        "default": ""
    },
    "server_host": {
        "description": "服务监听地址",
        "type": "string",
        "default": "0.0.0.0"
    },
    "server_port": {
        "description": "服务端口",
        "type": "int",
        "default": 8080
    },
    "template_notification_enabled": {
        "description": "启用通知模板",
        "type": "bool",
        "default": true
    },
    "template_notification_html": {
        "description": "通知模板HTML内容",
        "type": "text",
        "default": "<!DOCTYPE html>\\n<html>\\n<head>\\n    <meta charset=\\\"utf-8\\\">\\n    <style>\\n        body {\\n            font-family: 'Microsoft YaHei', sans-serif;\\n            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);\\n            margin: 0;\\n            padding: 20px;\\n            min-height: 100vh;\\n            display: flex;\\n            align-items: center;\\n            justify-content: center;\\n        }\\n        .card {\\n            background: white;\\n            border-radius: 15px;\\n            padding: 30px;\\n            box-shadow: 0 10px 30px rgba(0,0,0,0.2);\\n            max-width: 600px;\\n            width: 100%;\\n        }\\n        .title {\\n            font-size: 24px;\\n            font-weight: bold;\\n            color: #333;\\n            margin-bottom: 20px;\\n            text-align: center;\\n        }\\n        .content {\\n            font-size: 16px;\\n            color: #666;\\n            line-height: 1.6;\\n            margin-bottom: 20px;\\n        }\\n        .footer {\\n            font-size: 12px;\\n            color: #999;\\n            text-align: center;\\n            border-top: 1px solid #eee;\\n            padding-top: 15px;\\n        }\\n    </style>\\n</head>\\n<body>\\n    <div class=\\\"card\\\">\\n        <div class=\\\"title\\\">{{title | default('通知')}}</div>\\n        <div class=\\\"content\\\">{{content | default('这是一条通知消息')}}</div>\\n        <div class=\\\"footer\\\">{{timestamp | default('刚刚')}}</div>\\n    </div>\\n</body>\\n</html>"
    },
    "template_notification_width": {
        "description": "通知模板渲染宽度",
        "type": "int",
        "default": 800
    },
    "template_notification_quality": {
        "description": "通知模板图片质量",
        "type": "string",
        "default": "high"
    },
    "template_alert_enabled": {
        "description": "启用警告模板 (红色主题的警告和错误消息)",
        "type": "bool",
        "default": true
    },
    "template_alert_html": {
        "description": "警告模板HTML内容 (支持变量: {{title}}, {{message}}, {{timestamp}}, {{level}})",
        "type": "text",
        "default": "<!DOCTYPE html>\\n<html>\\n<head>\\n    <meta charset=\\\"utf-8\\\">\\n    <style>\\n        body {\\n            font-family: 'Microsoft YaHei', sans-serif;\\n            background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);\\n            margin: 0;\\n            padding: 20px;\\n            min-height: 100vh;\\n            display: flex;\\n            align-items: center;\\n            justify-content: center;\\n        }\\n        .alert-card {\\n            background: white;\\n            border-radius: 15px;\\n            padding: 30px;\\n            box-shadow: 0 10px 30px rgba(0,0,0,0.3);\\n            max-width: 600px;\\n            width: 100%;\\n            border-left: 5px solid #ff6b6b;\\n        }\\n        .alert-icon {\\n            font-size: 48px;\\n            color: #ff6b6b;\\n            text-align: center;\\n            margin-bottom: 20px;\\n        }\\n        .alert-title {\\n            font-size: 24px;\\n            font-weight: bold;\\n            color: #d63031;\\n            margin-bottom: 15px;\\n            text-align: center;\\n        }\\n        .alert-message {\\n            font-size: 16px;\\n            color: #2d3436;\\n            line-height: 1.6;\\n            margin-bottom: 20px;\\n            text-align: center;\\n        }\\n        .alert-footer {\\n            font-size: 12px;\\n            color: #b2bec3;\\n            text-align: center;\\n            border-top: 1px solid #ddd;\\n            padding-top: 15px;\\n        }\\n    </style>\\n</head>\\n<body>\\n    <div class=\\\"alert-card\\\">\\n        <div class=\\\"alert-icon\\\">⚠️</div>\\n        <div class=\\\"alert-title\\\">{{title | default('系统警告')}}</div>\\n        <div class=\\\"alert-message\\\">{{message | default('检测到系统异常')}}</div>\\n        <div class=\\\"alert-footer\\\">{{timestamp | default('刚刚')}} | 级别: {{level | default('WARNING')}}</div>\\n    </div>\\n</body>\\n</html>"
    },
    "template_alert_width": {
        "description": "警告模板渲染宽度 (像素)",
        "type": "int",
        "default": 800
    },
    "template_alert_quality": {
        "description": "警告模板图片质量 (low/medium/high/ultra)",
        "type": "string",
        "default": "high"
    },
    "template_success_enabled": {
        "description": "启用成功模板 (绿色主题的成功和完成消息)",
        "type": "bool",
        "default": true
    },
    "template_success_html": {
        "description": "成功模板HTML内容 (支持变量: {{title}}, {{message}}, {{timestamp}})",
        "type": "text",
        "default": "<!DOCTYPE html>\\n<html>\\n<head>\\n    <meta charset=\\\"utf-8\\\">\\n    <style>\\n        body {\\n            font-family: 'Microsoft YaHei', sans-serif;\\n            background: linear-gradient(135deg, #00b894 0%, #00a085 100%);\\n            margin: 0;\\n            padding: 20px;\\n            min-height: 100vh;\\n            display: flex;\\n            align-items: center;\\n            justify-content: center;\\n        }\\n        .success-card {\\n            background: white;\\n            border-radius: 15px;\\n            padding: 30px;\\n            box-shadow: 0 10px 30px rgba(0,0,0,0.2);\\n            max-width: 600px;\\n            width: 100%;\\n            border-left: 5px solid #00b894;\\n        }\\n        .success-icon {\\n            font-size: 48px;\\n            color: #00b894;\\n            text-align: center;\\n            margin-bottom: 20px;\\n        }\\n        .success-title {\\n            font-size: 24px;\\n            font-weight: bold;\\n            color: #00a085;\\n            margin-bottom: 15px;\\n            text-align: center;\\n        }\\n        .success-message {\\n            font-size: 16px;\\n            color: #2d3436;\\n            line-height: 1.6;\\n            margin-bottom: 20px;\\n            text-align: center;\\n        }\\n        .success-footer {\\n            font-size: 12px;\\n            color: #636e72;\\n            text-align: center;\\n            border-top: 1px solid #ddd;\\n            padding-top: 15px;\\n        }\\n    </style>\\n</head>\\n<body>\\n    <div class=\\\"success-card\\\">\\n        <div class=\\\"success-icon\\\">✅</div>\\n        <div class=\\\"success-title\\\">{{title | default('操作成功')}}</div>\\n        <div class=\\\"success-message\\\">{{message | default('操作已成功完成')}}</div>\\n        <div class=\\\"success-footer\\\">{{timestamp | default('刚刚')}}</div>\\n    </div>\\n</body>\\n</html>"
    },
    "template_success_width": {
        "description": "成功模板渲染宽度 (像素)",
        "type": "int",
        "default": 800
    },
    "template_success_quality": {
        "description": "成功模板图片质量 (low/medium/high/ultra)",
        "type": "string",
        "default": "high"
    },
