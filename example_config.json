{
  "api_path": "/api/render/image",
  "auth_token": "your_secure_token_here_please_change_it",
  "server_host": "0.0.0.0",
  "server_port": 8080,
  "templates": {
    "notification": {
      "alias": "notification",
      "name": "通知模板",
      "description": "通用通知消息模板",
      "html_content": "<!DOCTYPE html>\n<html>\n<head>\n    <meta charset=\"utf-8\">\n    <style>\n        body {\n            font-family: 'Microsoft YaHei', sans-serif;\n            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);\n            margin: 0;\n            padding: 20px;\n            min-height: 100vh;\n            display: flex;\n            align-items: center;\n            justify-content: center;\n        }\n        .card {\n            background: white;\n            border-radius: 15px;\n            padding: 30px;\n            box-shadow: 0 10px 30px rgba(0,0,0,0.2);\n            max-width: 600px;\n            width: 100%;\n        }\n        .title {\n            font-size: 24px;\n            font-weight: bold;\n            color: #333;\n            margin-bottom: 20px;\n            text-align: center;\n        }\n        .content {\n            font-size: 16px;\n            color: #666;\n            line-height: 1.6;\n            margin-bottom: 20px;\n        }\n        .footer {\n            font-size: 12px;\n            color: #999;\n            text-align: center;\n            border-top: 1px solid #eee;\n            padding-top: 15px;\n        }\n    </style>\n</head>\n<body>\n    <div class=\"card\">\n        <div class=\"title\">{{title | default('通知')}}</div>\n        <div class=\"content\">{{content | default('这是一条通知消息')}}</div>\n        <div class=\"footer\">{{timestamp | default('刚刚')}}</div>\n    </div>\n</body>\n</html>",
      "render_width": 800,
      "render_quality": "high"
    },
    "alert": {
      "alias": "alert",
      "name": "警告模板",
      "description": "系统警告和错误消息模板",
      "html_content": "<!DOCTYPE html>\n<html>\n<head>\n    <meta charset=\"utf-8\">\n    <style>\n        body {\n            font-family: 'Microsoft YaHei', sans-serif;\n            background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);\n            margin: 0;\n            padding: 20px;\n            min-height: 100vh;\n            display: flex;\n            align-items: center;\n            justify-content: center;\n        }\n        .alert-card {\n            background: white;\n            border-radius: 15px;\n            padding: 30px;\n            box-shadow: 0 10px 30px rgba(0,0,0,0.3);\n            max-width: 600px;\n            width: 100%;\n            border-left: 5px solid #ff6b6b;\n        }\n        .alert-icon {\n            font-size: 48px;\n            color: #ff6b6b;\n            text-align: center;\n            margin-bottom: 20px;\n        }\n        .alert-title {\n            font-size: 24px;\n            font-weight: bold;\n            color: #d63031;\n            margin-bottom: 15px;\n            text-align: center;\n        }\n        .alert-message {\n            font-size: 16px;\n            color: #2d3436;\n            line-height: 1.6;\n            margin-bottom: 20px;\n            text-align: center;\n        }\n        .alert-details {\n            background: #f8f9fa;\n            padding: 15px;\n            border-radius: 8px;\n            font-size: 14px;\n            color: #636e72;\n            margin-bottom: 20px;\n        }\n        .alert-footer {\n            font-size: 12px;\n            color: #b2bec3;\n            text-align: center;\n            border-top: 1px solid #ddd;\n            padding-top: 15px;\n        }\n    </style>\n</head>\n<body>\n    <div class=\"alert-card\">\n        <div class=\"alert-icon\">⚠️</div>\n        <div class=\"alert-title\">{{title | default('系统警告')}}</div>\n        <div class=\"alert-message\">{{message | default('检测到系统异常')}}</div>\n        {% if details %}\n        <div class=\"alert-details\">\n            <strong>详细信息:</strong><br>\n            {{details}}\n        </div>\n        {% endif %}\n        <div class=\"alert-footer\">{{timestamp | default('刚刚')}} | 级别: {{level | default('WARNING')}}</div>\n    </div>\n</body>\n</html>",
      "render_width": 800,
      "render_quality": "high"
    },
    "report": {
      "alias": "report",
      "name": "报告模板",
      "description": "数据报告和统计信息模板",
      "html_content": "<!DOCTYPE html>\n<html>\n<head>\n    <meta charset=\"utf-8\">\n    <style>\n        body {\n            font-family: 'Microsoft YaHei', sans-serif;\n            background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);\n            margin: 0;\n            padding: 20px;\n            min-height: 100vh;\n            display: flex;\n            align-items: center;\n            justify-content: center;\n        }\n        .report-card {\n            background: white;\n            border-radius: 15px;\n            padding: 30px;\n            box-shadow: 0 10px 30px rgba(0,0,0,0.2);\n            max-width: 700px;\n            width: 100%;\n        }\n        .report-header {\n            text-align: center;\n            margin-bottom: 30px;\n            border-bottom: 2px solid #74b9ff;\n            padding-bottom: 20px;\n        }\n        .report-title {\n            font-size: 28px;\n            font-weight: bold;\n            color: #2d3436;\n            margin-bottom: 10px;\n        }\n        .report-subtitle {\n            font-size: 16px;\n            color: #636e72;\n        }\n        .metrics-grid {\n            display: grid;\n            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));\n            gap: 20px;\n            margin-bottom: 30px;\n        }\n        .metric-item {\n            background: #f8f9fa;\n            padding: 20px;\n            border-radius: 10px;\n            text-align: center;\n            border-left: 4px solid #74b9ff;\n        }\n        .metric-value {\n            font-size: 24px;\n            font-weight: bold;\n            color: #2d3436;\n            margin-bottom: 5px;\n        }\n        .metric-label {\n            font-size: 14px;\n            color: #636e72;\n        }\n        .report-summary {\n            background: #e8f4fd;\n            padding: 20px;\n            border-radius: 10px;\n            margin-bottom: 20px;\n        }\n        .summary-title {\n            font-size: 18px;\n            font-weight: bold;\n            color: #2d3436;\n            margin-bottom: 10px;\n        }\n        .summary-text {\n            font-size: 14px;\n            color: #636e72;\n            line-height: 1.6;\n        }\n        .report-footer {\n            text-align: center;\n            font-size: 12px;\n            color: #b2bec3;\n            border-top: 1px solid #ddd;\n            padding-top: 15px;\n        }\n    </style>\n</head>\n<body>\n    <div class=\"report-card\">\n        <div class=\"report-header\">\n            <div class=\"report-title\">{{title | default('数据报告')}}</div>\n            <div class=\"report-subtitle\">{{subtitle | default('系统运行状态报告')}}</div>\n        </div>\n        \n        {% if metrics %}\n        <div class=\"metrics-grid\">\n            {% for metric in metrics %}\n            <div class=\"metric-item\">\n                <div class=\"metric-value\">{{metric.value}}</div>\n                <div class=\"metric-label\">{{metric.label}}</div>\n            </div>\n            {% endfor %}\n        </div>\n        {% endif %}\n        \n        {% if summary %}\n        <div class=\"report-summary\">\n            <div class=\"summary-title\">摘要</div>\n            <div class=\"summary-text\">{{summary}}</div>\n        </div>\n        {% endif %}\n        \n        <div class=\"report-footer\">\n            生成时间: {{timestamp | default('刚刚')}} | 报告周期: {{period | default('实时')}}\n        </div>\n    </div>\n</body>\n</html>",
      "render_width": 900,
      "render_quality": "high"
    }
  }
}