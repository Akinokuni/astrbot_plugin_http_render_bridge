{
    "host": {
        "description": "服务监听的 IP 地址。",
        "type": "string",
        "default": "0.0.0.0"
    },
    "port": {
        "description": "HTTP 服务的端口号。",
        "type": "int",
        "default": 8080
    },
    "platform_name": {
        "description": "目标聊天平台 (目前仅支持 aiocqhttp)。",
        "type": "string",
        "options": [
            "aiocqhttp"
        ],
        "default": "aiocqhttp"
    },
    "self_id": {
        "description": "机器人自身的 ID (例如 QQ 号)，用于精确定位机器人实例。",
        "type": "string",
        "default": ""
    },
    "group_id": {
        "description": "用于接收转发消息的群组 ID。",
        "type": "string",
        "default": ""
    },
    "token": {
        "description": "用于认证请求的密钥 (Token)。",
        "type": "string",
        "default": ""
    }
}
